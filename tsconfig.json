{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "main/static/js",
    "rootDir": "main/assets/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["main/assets/ts/**/*"],
  "exclude": ["node_modules"]
}